{
  "name": "worldmates-windows-messenger",
  "productName": "WorldMates Messenger",
  "version": "0.2.0",
  "private": true,
  "description": "Windows 10/11 desktop messenger client for WorldMates APIs",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://127.0.0.1:5173 electron .\"",
    "build:web": "vite build",
    "build": "npm run build:web",
    "typecheck": "tsc --noEmit",
    "start": "electron .",
    "dist:win": "npm run build:web && electron-builder --win nsis msi",
    "dist:portable": "npm run build:web && electron-builder --win portable"
  },
  "build": {
    "appId": "com.worldmates.messenger.desktop",
    "productName": "WorldMates Messenger",
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "electron/main.cjs"
    },
    "win": {
      "target": [
        "nsis",
        "msi",
        "portable"
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "executableName": "WorldMatesMessenger"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "WorldMates Messenger",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.14",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "wait-on": "^8.0.1"
  }
}
